<mvc:View height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Page title="Search for Monsters" class="marginBoxContent">
        <headerContent>
<!--             <Button icon="sap-icon://action" /> -->
        </headerContent>
        <subHeader>
            <Toolbar>
                <SearchField width="200px" liveChange="onSearch" />
            </Toolbar>
        </subHeader>
        <content>
            <Table id="idProductsTable" inset="false" items="{path: '/Products',sorter: {path: 'ProductName'}}">
                <headerToolbar>
                    <Toolbar>
                        <Label text="Products"></Label>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Product" />
                    </Column>
                    <Column>
                        <Text text="Quantity per Unit" />
                    </Column>
                    <Column>
                        <Text text="Units in Stock" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onMonsterSelected">
                        <cells>
                            <ObjectIdentifier title="{ProductName}" text="Product Id {ProductID}" class="sapMTableContentMargin" />
                            <Text text="QuantityPerUnit" />
                            <Text text="{path:'UnitsInStock',formatter:'.myFormatter'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
<!--                 <Button text="Accept" type="Accept" />
                <Button text="Reject" type="Reject" />
                <Button text="Edit" />
                <Button text="Delete" /> -->
            </Toolbar>
        </footer>
    </Page>
</mvc:View>